{
  "name": "Rocket.Chat Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20.18.0"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "postCreateCommand": "corepack enable && corepack prepare yarn@4.5.3 --activate && /usr/local/bin/mongodb-init.sh",
  "remoteUser": "node",
  "forwardPorts": [3000, 27017]
}
